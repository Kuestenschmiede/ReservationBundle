{
    "name": "con4gis/reservation",
    "description": "Contao module for creating reservation forms. For example for tables, rooms or other objects.",
    "keywords": ["con4gis", "reservation", "room", "table", "practice", "event", "seminar", "contao", "c4g"],
    "type": "contao-bundle",
    "homepage": "https://con4gis.org",
    "license": "LGPL-3.0+",
    "authors":[
        {
            "name":"KÃ¼stenschmiede GmbH Software & Design",
            "homepage":"https://kuestenschmiede.de"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "^4.9",
        "contao/calendar-bundle": "^4.9",
        "con4gis/projects": "^4.0.34",
        "con4gis/documents": "^1.5.3",
        "con4gis/groups": "^2.8.5"
    },
    "require-dev": {
        "contao/test-case": "^4.9",
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^5.4 || ^6.0"
    },
    "conflict": {
        "contao/core": "*",
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "support": {
        "issues": "https://github.com/Kuestenschmiede/ReservationBundle/issues"
    },
    "autoload": {
        "psr-4": {
            "con4gis\\ReservationBundle\\": "src/"
        },
        "classmap": [
            "src/Classes/",
            "src/Resources/contao/"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Contao\\ReservationBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "contao-components/installer": true,
            "contao/manager-plugin": true,
            "preferred-install": "dist"
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "target-directory": "tools"
        },
        "contao-manager-plugin": "con4gis\\ReservationBundle\\ContaoManager\\Plugin"
    },
    "scripts": {
        "all": [
            "@unit-tests",
            "@ecs",
            "@phpstan"
        ],
        "ecs": "@php tools/ecs/vendor/bin/ecs check src tests --config ecs.php --fix --ansi",
        "phpstan": "@php tools/phpstan/vendor/bin/phpstan analyze --ansi",
        "unit-tests": "@php vendor/bin/phpunit --colors=always"
    }
}
